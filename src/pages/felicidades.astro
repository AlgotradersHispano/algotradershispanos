---

import Layout from '../layouts/Layout2.astro';

---



<Layout title="Algo Traders Hispano">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="icon" type="image/svg+xml" href="/public/logo.ico"/>
  <main class="h-screen relative flex flex-col justify-center items-center gap-3">


      <div class="">
          <img class="w-52 brightness-90" src="/images/Dorado.png" alt="Logo Sin Fondo">
      </div>
      
      <div class="absolute inset-0 flex justify-center items-center opacity-5">
          <img src="/images/TRADIUN.webp" alt="Logo" class="h-3/4 object-contain pointer-events-none xl:h-2/4">
      </div>

      <div class="relative z-10 text-white font-poppins text-center flex flex-col justify-center items-center gap-4   ">
          <h2 class="text-4xl font-bold xl:text-5xl">Felicitaciones por <span class="custom-text-gradient">ANIMARTE AL PROXIMO NIVEL</span></h2>
          <p class=" text-slate-300">Click aca abajo
              para <span class="custom-text-gradient">CONFIRMAR</span> la reunion.
          </p>

          <div class=" logo-effect p-3 flex justify-center gap-2 bg-white text-black rounded-xl transition-colors duration-300 ease-in-out hover:bg-gray-300 hover:text-black md:m-auto md:w-2/3 lg:w-1/2 xl:w-2/5">
            <button class="">
                <a class="md:text-xl" href="https://api.whatsapp.com/send?phone=541133825664">CONFIRMAR</a>
            </button>
        </div>
        

      </div>
  </main>
</Layout>


<style>
	.custom-text-gradient {
    background: radial-gradient(at 61.681808839936906% 18.713453047060867%, hsla(45, 84%, 60%, 1) 0%, hsla(45, 84%, 60%, 0) 100%),
            radial-gradient(at 8.792883057247769% 10.531053903989228%, hsla(50, 84%, 65%, 1) 0%, hsla(50, 84%, 65%, 0) 100%),
            radial-gradient(at 92.39499859343967% 89.18327529767484%, hsla(40, 84%, 55%, 1) 0%, hsla(40, 84%, 55%, 0) 100%),
            radial-gradient(at 76.09054593785065% 38.92786969520729%, hsla(48, 84%, 58%, 1) 0%, hsla(48, 84%, 58%, 0) 100%);

    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
  .logo-effect 
        {
        filter:drop-shadow(1px 1px 20px rgb(138, 129, 0))
        }
</style>